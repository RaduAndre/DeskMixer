  <!-- DPI Awareness (for high-DPI displays) -->
  <application xmlns="urn:schemas-microsoft-com:asm.v3">
    <windowsSettings>
      <!-- DPI awareness for Windows 10 -->
      <dpiAware xmlns="http://schemas.microsoft.com/SMI/2005/WindowsSettings">true</dpiAware>
      <!-- Per-monitor DPI awareness for Windows 10 version 1703+ -->
      <dpiAwareness xmlns="http://schemas.microsoft.com/SMI/2016/WindowsSettings">PerMonitorV2</dpiAwareness>
      <!-- Long path aware (supports paths > 260 characters) -->
      <longPathAware xmlns="http://schemas.microsoft.com/SMI/2016/WindowsSettings">true</longPathAware>
    </windowsSettings>
  </application>

  <!--
    Execution Level and UI Access
    - asInvoker: Run with user's current privileges (recommended)
    - highestAvailable: Request elevation if available
    - requireAdministrator: Always request admin (use only if necessary)
  -->
  <trustInfo xmlns="urn:schemas-microsoft-com:asm.v3">
    <security>
      <requestedPrivileges>
        <!--
          Use "asInvoker" for normal operation
          Change to "requireAdministrator" only if you need admin rights
          (Note: Requiring admin can increase AV suspicion)
        -->
        <requestedExecutionLevel
          level="asInvoker"
          uiAccess="false"
        />
      </requestedPrivileges>
    </security>
  </trustInfo>

  <!-- Dependency on common controls for modern UI -->
  <dependency>
    <dependentAssembly>
      <assemblyIdentity
        type="win32"
        name="Microsoft.Windows.Common-Controls"
        version="6.0.0.0"
